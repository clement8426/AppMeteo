<div class="container-fluid" style="height: 100vh">
    <form id="search-form" class="form-inline d-flex mt-4 w-50">
        <input id="search-input" class="form-control mr-sm-4 text-center" type="search" placeholder="ex: Paris" aria-label="Search">
        <button class="btn btn-secondary" type="submit" style="margin-right: 12px;">Search</button>
    </form>
    <div class="row mt-3">
        <div class="col-md-6">
            <div class="card" style="background-color: #92BCEA">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center justify-content-between">
                        <div id="weather-info-town" style="color: black; font-size: 50px"></div>
                        <div id="flag"></div>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <div id="weather-info-country" style="color: black; font-size: 40px; border-bottom: 2px solid #617073;" class="flex-grow-1"></div>
                        <div id="weather-info-local-time" style="color: black; font-size: 40px; border-bottom: 2px solid #617073;"></div>
                    </div>
                    <div class="d-flex justify-content-between align-items-start mb-3" style="color: black; font-size: 40px; border-bottom: 1px solid #617073;">
                        <div id="weather-info-cloud"></div>
                        <div id="weather-info-day-or-night"></div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center" style="color: black; font-size: 40px; border-bottom: 1px solid #617073;">
                        <div class="d-flex justify-content-start align-items-center" style="color: black; font-size: 25px; ">
                            <span class="me-1">Wind:</span>
                            <div id="weather-info-wind" style="color: black; font-size: 25px;"></div>
                        </div>
                        <div class="d-flex justify-content-start align-items-center" style="color: black; font-size: 25px;">
                            <span class="me-1">Rain:</span>
                            <div id="weather-info-precipitation" style="color: black; font-size: 25px;"></div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center  pt-3" style="border-bottom: 1px solid #617073;">
                        <div style="color: black; font-size: 40px">
                            <div id="weather-info-temperature"></div>
                        </div>
                        <div style="color: black; font-size: 30px*">
                            <div id="weather-info-condition"></div>
                        </div>
                    </div>
                    <div style="font-size: 20px">
                            <div id="currency-info"></div>
                            <div id="search-count"></div>
                            </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card" style="background-color: #92BCEA">
                <div class="card-body full-width-list">
                    <h1 class="text-center mb-3" style="font-size: 24px; font-weight: bold;">Recent checks (10)</h1>
                    <div class="d-flex justify-content-between mb-4" style="border-bottom: 1px solid #617073;">
                        <div class="text-center" style="flex: 1; color: #171A21; font-size: 20px;">Location</div>
                        <div class="text-center" style="flex: 1; color: #171A21; font-size: 20px;">Temperature</div>
                        <div class="text-center" style="flex: 1; color: #171A21; font-size: 20px;">Weather</div>
                        <div class="text-center" style="flex: 1; color: #171A21; font-size: 20px;">Day/Night</div>
                        <div class="text-end me-3" style="flex: 1; color: #171A21; font-size: 20px;">Date</div>
                    </div>
                    <ul style="padding-left: 0; list-style-type: none;">
                        <% Visitor.order(created_at: :desc).limit(10).each do |visitor| %>
                            <%= render 'shared/visitor', visitor: visitor %>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-3">
                <p>By <strong>Clement BASTIEN</strong> and <strong>Johan FILONNEAU</strong></p>
            </div>
            <div class="col-md-4 mt-3">
                <p>Contact : <strong>testingstuff@gmail.com</strong></p>
            </div>
        </div>
    </div>
</footer>
